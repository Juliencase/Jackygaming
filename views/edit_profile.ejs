<%- include header %>
<body>
    <div class="container-fluid col-sm-12" id="mainform">
      <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">Modifier son profil
            </div>
          </div>

          <div class="panel-body">
            <form class="form-horizontal" role="form" method="post" action="/home/profile/edit_profile">
              <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
              </div>
              <!-- First name -->
              <div class="form-group">
                  <label for="first_name" class="col-md-3 control-label">Prénom</label>
                  <div class="col-md-9">
                      <input type="text" class="form-control" name="first_name" placeholder="Prénom">
                  </div>
              </div>
              <!-- Last name -->
              <div class="form-group">
                  <label for="first_name" class="col-md-3 control-label">Nom</label>
                  <div class="col-md-9">
                      <input type="text" class="form-control" name="last_name" placeholder="Nom">
                  </div>
              </div>
              <!-- Phone number -->
              <div class="form-group">
                  <label for="first_name" class="col-md-3 control-label">N° téléphone</label>
                  <div class="col-md-9">
                      <input type="text" class="form-control" name="mob_no" placeholder="N° de téléphone">
                  </div>
              </div>
              <!-- User_name -->
              <div class="form-group">
                  <label for="first_name" class="col-md-3 control-label">Pseudo</label>
                  <div class="col-md-9">
                      <input type="text" class="form-control" name="user_name" placeholder="Pseudo">
                  </div>
              </div>
              <!-- Password -->
              <div class="form-group">
                  <label for="first_name" class="col-md-3 control-label">Mot de passe</label>
                  <div class="col-md-9">
                      <input type="text" class="form-control" name="password" placeholder="Mot de passe">
                  </div>
              </div>

              <div class="form-group">
                <!-- Button -->
                <div class="col-md-offset-3 col-md-9">
                    <button id="btn-signup "type="submit" class="btn btn-info">Sauvegarder</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  </body>
